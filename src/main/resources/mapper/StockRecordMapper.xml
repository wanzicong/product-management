<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.product.mapper.StockRecordMapper">

    <!-- 分页查询库存记录（带商品信息） -->
    <select id="selectRecordPage" resultType="com.example.product.entity.StockRecord">
        SELECT
            r.*,
            p.product_name,
            p.product_code
        FROM t_stock_record r
        LEFT JOIN t_product p ON r.product_id = p.id
        WHERE 1=1
        <if test="productId != null">
            AND r.product_id = #{productId}
        </if>
        <if test="type != null">
            AND r.type = #{type}
        </if>
        ORDER BY r.create_time DESC
    </select>

</mapper>
